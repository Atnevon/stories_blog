<p id="notice"><%= notice %></p>

<h1>Stores From the World</h1>



<div class="row">
    <% @blog_posts.each do |blog_post| %>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= link_to blog_post.title, blog_post %>
          </div>
          <div class= "panel-body">
            by <%= link_to blog_post.user.username, user_posts_path(id: blog_post.user.id) %><br>

            posted at: <%= blog_post.created_at.strftime('%m/%d/%Y at %I:%M%p') %>
            <hr>
            <p><%= blog_post.entry[0..250] %>... <%= link_to "[READ MORE]", blog_post %></p>
          </div>
          <div class= "panel-footer">
              <% if current_user.id == blog_post.user.id %> 
                <%= link_to 'Edit Post', edit_blog_post_path(blog_post), class: "btn btn-warning" %>
                <%= link_to 'Delete Post', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
              <% end %>
          </div>
        </div>
      </div>
    <% end %>
</div>


<br>

<center><h3>Tell a story of your own.</h3>
<%= link_to 'Create a new stoy post!', new_blog_post_path, class: "btn btn-info" %> </center>
