<h1><%= @user.username %>'s Posts and Stories</h1>

<% @user.blog_posts.each do |blog_post| %>
	<div class="col-xs-4">
		<div class="panel panel-success">
			<div class="panel panel-heading">
				<%= link_to blog_post.title, blog_post %>
			</div>
			

			<div class="panel-body">
				<p><%= blog_post.created_at.strftime('%m/%d/%Y at %l:%M%p') %></p>
				<p><%= blog_post.entry[0..150] %>...[<%= link_to "READ MORE", blog_post %>]</p>
			</div>


			<div class="panel-footer">
			</div>
		</div>
	</div>

<% end %>